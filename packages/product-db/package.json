{
    "name": "@repo/product-db",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "postbuild": "node ./scripts/fix-imports.js",
        "db:status": "npx drizzle-kit status --config ./drizzle.config.ts",
        "db:generate": "npx drizzle-kit generate --config ./drizzle.config.ts",
        "db:push": "npx drizzle-kit push --config ./drizzle.config.ts",
        "db:pull": "drizzle-kit pull --config ./drizzle.config.ts",
        "db:check": "drizzle-kit check --config ./drizzle.config.ts",
        "db:up": "drizzle-kit up --config ./drizzle.config.ts",
        "studio": "drizzle-kit studio --config ./drizzle.config.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.7",
        "pg": "^8.16.3"
    },
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./schema": {
            "types": "./dist/schema/index.d.ts",
            "import": "./dist/schema/index.js",
            "require": "./dist/schema/index.js"
        },
        "./database": {
            "types": "./dist/database.d.ts",
            "import": "./dist/database.js",
            "require": "./dist/database.js"
        }
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^24.10.1",
        "@types/pg": "^8.15.6",
        "drizzle-kit": "^0.31.6",
        "typescript": "^5.9.3"
    },
    "turbo": {
        "outputs": [
            "dist/**"
        ]
    }
}
