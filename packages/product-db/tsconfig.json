{
    "extends": "@repo/typescript-config/base.json",
    "include": ["src/**/*"],

    "exclude": ["dist", "build", "node_modules", "drizzle.config.ts"],
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@/*": ["./src/*"],
            "@schema": ["./src/schema/index.ts"],
            "@db": ["./src/database.ts"],
            "@product-db": ["./src/index.ts"]
        },
        "types": ["node"]
    }
}
